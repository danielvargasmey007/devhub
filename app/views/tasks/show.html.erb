<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "â† Back to Project", @project, class: "text-blue-600 hover:underline" %>
  </div>

  <div class="border rounded-lg p-6">
    <h1 class="text-3xl font-bold mb-4"><%= @task.title %></h1>

    <div class="mb-4">
      <strong>Status:</strong>
      <span class="inline-block px-3 py-1 rounded <%= @task.status %>">
        <%= @task.status.titleize %>
      </span>
    </div>

    <% if @task.description.present? %>
      <div class="mb-4">
        <strong>Description:</strong>
        <p class="text-gray-600"><%= @task.description %></p>
      </div>
    <% end %>

    <% if @task.assignee.present? %>
      <div class="mb-4">
        <strong>Assigned to:</strong>
        <%= @task.assignee.name %>
      </div>
    <% end %>

    <div class="mt-6 flex gap-2">
      <%= button_to "Edit Task", edit_project_task_path(@project, @task), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to "Delete Task",
                    project_task_path(@project, @task),
                    method: :delete,
                    class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>

    </div>
  </div>
</div>