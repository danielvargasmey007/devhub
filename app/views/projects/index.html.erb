<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Projects</h1>
    <%= link_to "New Project", new_project_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <% if @projects.any? %>
    <div class="grid gap-4">
      <% @projects.each do |project| %>
        <div class="border rounded-lg p-6 hover:shadow-lg transition">
          <h2 class="text-xl font-semibold mb-2">
            <%= link_to project.name, project, class: "text-blue-600 hover:text-blue-800" %>
          </h2>
          <% if project.description.present? %>
            <p class="text-gray-600 mb-4"><%= project.description %></p>
          <% end %>
          <div class="flex gap-2">
            <%= link_to "View", project, class: "text-sm text-blue-600 hover:underline" %>
            <%= link_to "Edit", edit_project_path(project), class: "text-sm text-yellow-600 hover:underline" %>
            <%= link_to "Delete", project, data: { turbo_method: :delete }, class: "text-sm text-red-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No projects yet. <%= link_to "Create one", new_project_path, class: "text-blue-600 hover:underline" %>!</p>
  <% end %>
</div>