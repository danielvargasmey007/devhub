<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "â† Back to Projects", projects_path, class: "text-blue-600 hover:underline" %>
  </div>

  <div class="mb-6">
    <h1 class="text-3xl font-bold mb-2"><%= @project.name %></h1>
    <% if @project.description.present? %>
      <p class="text-gray-600"><%= @project.description %></p>
    <% end %>
    <div class="mt-4 flex gap-2">
      <%= link_to "Edit Project", edit_project_path(@project), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to "Delete Project",
                    project_path(@project),
                    method: :delete,
                    class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="mt-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-bold">Tasks</h2>
      <%= link_to "New Task", new_project_task_path(@project), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <% if @tasks.any? %>
      <div class="grid gap-4">
        <% @tasks.each do |task| %>
          <div class="border rounded-lg p-4">
            <h3 class="text-lg font-semibold">
              <%= link_to task.title, project_task_path(@project, task), class: "text-blue-600 hover:text-blue-800" %>
            </h3>
            <span class="inline-block px-2 py-1 text-xs rounded <%= task.status %>">
              <%= task.status.titleize %>
            </span>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No tasks yet.</p>
    <% end %>
  </div>
</div>